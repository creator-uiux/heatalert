<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/dialog_header_security"
        android:padding="16dp">

        <!-- Security Shield Icon -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_security"
            android:layout_marginEnd="12dp"
            app:tint="@android:color/white" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change Password"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Close Button -->
        <ImageView
            android:id="@+id/iv_close_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_white"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Dialog Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Security Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For your security, please enter your current password before setting a new one."
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_marginBottom="20dp" />

        <!-- Current Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/et_current_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter current password"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:background="@drawable/edittext_security_background"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="18dp"
            android:drawableStart="@drawable/ic_lock_small"
            android:drawablePadding="12dp" />

        <!-- New Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:background="@drawable/edittext_security_background"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="18dp"
            android:drawableStart="@drawable/ic_key_small"
            android:drawablePadding="12dp" />

        <!-- Confirm New Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Password"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm new password"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:background="@drawable/edittext_security_background"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_check_small"
            android:drawablePadding="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btn_cancel_password"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Cancel"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:background="@drawable/button_cancel"
                android:paddingHorizontal="24dp"
                android:layout_marginEnd="12dp"
                android:minWidth="0dp" />

            <!-- Update Password Button -->
            <Button
                android:id="@+id/btn_update_password"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Update Password"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:background="@drawable/button_security"
                android:paddingHorizontal="24dp"
                android:minWidth="0dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>