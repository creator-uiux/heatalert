<?xml version="1.0" encoding="utf-8"?>
<!-- item_sensor_log_expandable.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Main Row -->
    <LinearLayout
        android:id="@+id/mainRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="08/18"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10:25 AM"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="32Â°C"
            android:textSize="12sp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvSmoke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Low"
            android:textSize="12sp"
            android:textColor="#228B22"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvFlame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None"
            android:textSize="12sp"
            android:textColor="#228B22"
            android:gravity="center" />
    </LinearLayout>

    <!-- Expanded Details Section -->
    <LinearLayout
        android:id="@+id/expandedDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF8DC"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Detailed Sensor Reading Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed Sensor Reading"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFA500"
            android:layout_marginBottom="12dp" />

        <!-- First Row: Humidity and Smoke PPM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity:"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smoke PPM:"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvSmokePPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 ppm"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row: Location and Sensor ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kitchen"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor ID:"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvSensorId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HS-001"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

</LinearLayout>