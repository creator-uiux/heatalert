<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/modal_background"
    android:padding="20dp"
    android:layout_margin="16dp">

    <!-- Modal Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¨"
            android:textSize="24sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Smoke"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor ID: SS-001"
            android:textSize="12sp"
            android:textColor="#666666" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Smoke Value -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/smoke_value_background"
        android:padding="24dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvSmokeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11%"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#4682B4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderate Level"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Sensor Details Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Details"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <!-- Details List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/details_background"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:textSize="14sp"
                android:textColor="#666666" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Last Reading -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Reading"
                android:textSize="14sp"
                android:textColor="#666666" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:02 AM"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="#666666" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kitchen Area"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Battery -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battery"
                android:textSize="14sp"
                android:textColor="#666666" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95%"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Accuracy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accuracy"
                android:textSize="14sp"
                android:textColor="#666666" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="96%"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="#666666"
            android:background="@drawable/button_secondary"
            android:paddingHorizontal="20dp"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View History"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:paddingHorizontal="20dp" />
    </LinearLayout>
</LinearLayout>
